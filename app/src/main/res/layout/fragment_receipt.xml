<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.Shrine.Filter.SubHead"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/receipt_row"
                android:textAlignment="center" />

            <TextView
                style="@style/TextAppearance.Shrine.Filter.SubHead"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/receipt_product"
                android:textAlignment="center" />

            <TextView
                style="@style/TextAppearance.Shrine.Filter.SubHead"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/receipt_price"
                android:textAlignment="center" />

            <TextView
                style="@style/TextAppearance.Shrine.Filter.SubHead"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/receipt_quantity"
                android:textAlignment="center" />

            <TextView
                style="@style/TextAppearance.Shrine.Filter.SubHead"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/receipt_subtotal"
                android:textAlignment="center" />
        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_layout"
        android:layout_marginTop="@dimen/shrine_small_spacing"
        android:layout_marginBottom="@dimen/shrine_small_spacing"
        android:padding="@dimen/shrine_standard_spacing"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.Shrine.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/shrine_large_spacing"
            android:paddingEnd="@dimen/shrine_large_spacing"
            android:gravity="end"
            android:text="@string/receipt_total" />

        <TextView
            style="@style/Widget.Shrine.TextView"
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/shrine_large_spacing"
            android:paddingEnd="@dimen/shrine_large_spacing"
            android:gravity="end"
            tools:text="$20.23" />

    </LinearLayout>

</RelativeLayout>