<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_drawer"
    style="@style/Widget.MaterialComponents.BottomSheet.Modal"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_drag_handle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottomsheet_state"
            style="?textAppearanceHeadline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/shrine_small_spacing"
            android:text="@string/bottom_sheet_quick_access"
            android:textColor="@color/textColorSecondary" />
    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/shrine_small_spacing"
        android:clipToPadding="false"
        android:columnCount="2">

        <Button
            style="@style/Widget.Shrine.Button.OutlinedButton.Accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/shrine_small_spacing"
            android:text="Ham Fud" />

        <Button
            style="@style/Widget.Shrine.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/shrine_small_spacing"
            android:text="Turkey Ham" />

        <Button
            style="@style/Widget.Shrine.Button.OutlinedButton.Accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/shrine_small_spacing"
            android:text="Ham Gali" />

        <Button
            style="@style/Widget.Shrine.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/shrine_small_spacing"
            android:text="American Cheese" />

        <Button
            style="@style/Widget.Shrine.Button.OutlinedButton.Accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/shrine_small_spacing"
            android:text="Cheese" />

        <Button
            style="@style/Widget.Shrine.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/shrine_small_spacing"
            android:text="Oaxaca Cheese" />

    </GridLayout>
</LinearLayout>
