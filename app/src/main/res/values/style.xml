<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Action Chip -->
    <style name="Widget.Pos.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
    </style>

    <!-- Action Chip Filled -->
    <style name="Widget.Pos.Chip.Action.Filled" parent="Widget.Pos.Chip.Action">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/white</item>
        <item name="rippleColor">@color/grey_900_alpha_20</item>
        <item name="chipStartPadding">@dimen/standard_spacing</item>
        <item name="chipEndPadding">@dimen/standard_spacing</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="textStartPadding">@dimen/small_spacing</item>
        <item name="textEndPadding">0dp</item>
    </style>

    <style name="Widget.Pos.Chip.Action.Filled.Blue" parent="Widget.Pos.Chip.Action.Filled">
        <item name="chipBackgroundColor">@color/color_primary</item>
    </style>

    <style name="Widget.Pos.Chip.Action.Filled.Red" parent="Widget.Pos.Chip.Action.Filled">
        <item name="chipBackgroundColor">@color/red_800</item>
    </style>

    <!-- Action Chips HairLine -->
    <style name="Widget.Pos.Chip.Action.Hairline.Text" parent="Widget.Pos.Chip.Action">
        <item name="textStartPadding">@dimen/standard_spacing</item>
        <item name="textEndPadding">@dimen/standard_spacing</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="Widget.Pos.Chip.Hairline.Amber.Text" parent="Widget.Pos.Chip.Action.Hairline.Text">
        <item name="chipStrokeColor">@color/amber_700</item>
        <item name="rippleColor">@color/amber_300</item>
        <item name="android:textColor">@color/amber_700</item>
    </style>

    <style name="Widget.Pos.Chip.Hairline.Blue.Text" parent="Widget.Pos.Chip.Action.Hairline.Text">
        <item name="chipStrokeColor">@color/color_secondary</item>
        <item name="rippleColor">@color/color_secondary_variant</item>
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <!-- Outline Buttons -->
    <style name="Widget.Pos.Button.OutlinedButton.Blue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/color_secondary_variant</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="strokeColor">@color/color_secondary</item>
    </style>

    <style name="Widget.Pos.Button.OutlinedButton.Red" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/red_a200</item>
        <item name="android:textColor">@color/red_a400</item>
        <item name="strokeColor">@color/red_a400</item>
    </style>

    <style name="Widget.Pos.Button.OutlinedButton.Yellow" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/amber_300</item>
        <item name="android:textColor">@color/amber_700</item>
        <item name="strokeColor">@color/amber_700</item>
    </style>
</resources>