<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="saleLine"
            type="com.toolinc.openairmarket.pos.persistence.model.sale.SaleLine" />
    </data>

    <TableRow
        android:id="@+id/product_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tiny_spacing">

        <TextView
            style="@style/TextAppearance.Pos.Filter.SubHead"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(saleLine.lineOrder)}"
            android:textAlignment="center"
            tools:text="1" />

        <TextView
            style="@style/TextAppearance.Pos.Filter.SubHead"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@{saleLine.product}"
            android:textAlignment="center"
            tools:text="Product Code" />

        <TextView
            style="@style/TextAppearance.Pos.Filter.SubHead"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="@{saleLine.name}"
            android:textAlignment="center"
            tools:text="Product Name" />

        <TextView
            style="@style/TextAppearance.Pos.Filter.SubHead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@{saleLine.price}"
            android:textAlignment="center"
            tools:text="$1.0" />

        <TextView
            style="@style/TextAppearance.Pos.Filter.SubHead"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@{saleLine.quantity}"
            android:textAlignment="center"
            tools:text="3" />

        <TextView
            style="@style/TextAppearance.Pos.Filter.SubHead"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@{saleLine.total}"
            android:textAlignment="center"
            tools:text="$3.0" />

    </TableRow>

</layout>